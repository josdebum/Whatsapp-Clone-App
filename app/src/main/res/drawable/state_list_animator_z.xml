<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">


    <set>

    <objectAnimator android:valueType="floatType" android:valueTo="180" android:duration="@android:integer/config_shortAnimTime" android:propertyName="rotationX"/>

</set>

</item>


    <item android:state_pressed="false">


    <set>

    <objectAnimator android:valueType="floatType" android:valueTo="0" android:duration="@android:integer/config_shortAnimTime" android:propertyName="rotationX"/>

</set>

</item>

</selector>